---
import { exampleSource } from "./examples";
interface Props {
    /** [0] — for white theme, [1] — for black theme */
    sources: typeof exampleSource.videos;
    param?: string
}

const { sources, param } = Astro.props;

const videos = param ? sources.map((source) => ({src: `${source.src}?${param}`})) : sources

---
<figure>
    <video controls data-theming-img data-light={videos[0].src} data-dark={videos[1].src} src={videos[0].src} />
    {param ? <figcaption>{param}</figcaption> : ''}
</figure>
